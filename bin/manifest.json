{
	"name": "Javadoc2Haxe",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Create a Java lib extern for Haxe in one-click. Visit a Javadoc page, click on this extension's button and experience the magic.",
	"background" : {
		"scripts": ["background.js"]
	},
	"page_action": {
		"default_icon": "Javadoc2Haxe-logo.png"
	},
	"content_scripts" : [
		{
			"matches" : [
				"http://*/*",
				"https://*/*",
				"file://*/*"
			],
			"js" : ["contentscript.js"],
			"run_at" : "document_idle",
			"all_frames" : true
		}
	],
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"file://*/*"
	],
	"icons" : {
		"48" : "Javadoc2Haxe-logo-48.png"
	}
}